<section>
  <div class="logo-container">
    <h1 class="logo">AVIDU</h1>
  </div>
  <div class="container"></div>
  <div class="content">
    <img src="https://res.cloudinary.com/avidu/image/upload/v1656003940/cld-sample-5.jpg" alt="">
  </div>
</section>

<style>

  h1 {
    text-align: center;
  }

  img {
    max-width: 100%;
  }

  .logo {
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    padding: 0.5em;
    z-index: 10;
  }

  .container {
    width: 100%;
    height: 100vh;
  }

  .content {
    width: 100%;
    height: 100vh;
    position: relative;
  }

  .content img {
    width: 100%;
    margin: 0.5em;
  }
</style>

<script>
  import gsap from "gsap";
  import ScrollTrigger from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger)

  ScrollTrigger.create({
    animation: gsap.from(".logo", {
      y: "50vh",
      scale: 6,
      yPercent: -50,
    }),
    scrub: true,
    trigger: ".content",
    start: "top bottom",
    endTrigger: ".content",
    end: "top center",
  });
</script>
